<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NoobSwarm.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NoobSwarm.Avalonia.Views.MainWindow"
        xmlns:controls="using:NoobSwarm.Avalonia.Controls"
        xmlns:views="using:NoobSwarm.Avalonia.Views"
        Icon="/Assets/avalonia-logo.ico"
        Title="NoobSwarm.Avalonia">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <TabControl>
    <TabItem Header="Main">
      <views:Recording DataContext="{Binding RecordingViewModel}"/>

    </TabItem>
    <TabItem Header="Main2">
      <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Bla}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Command="{Binding ClickCommand}" Content="Click"/>
      </StackPanel>
    </TabItem>
  </TabControl>

</Window>
